[
  {
    "method": "get",
    "path": "/",
    "handler": "controllers/home.js"
  },
  {
    "method": "get",
    "path": "/articles",
    "handler": "controllers/articles.js"
  },
  {
    "method": "get",
    "path": "/articles/:artId",
    "handler": "controllers/articleDetails.js",
    "validate": [{
        "param": "artId",
        "type": "path",
        "validators": [
            "notEmpty",
            "isInt"
        ]
    }]
  },
  {
    "method": "get",
    "path": "/users",
    "handler": "controllers/users.js"
  },
  {
    "method": "get",
    "path": "/users/:userId",
    "handler": "controllers/userDetails.js",
    "validate": [{
        "param": "userId",
        "type": "path",
        "validators": [
            "notEmpty",
            "isString"
        ]
    }]
  }
]
